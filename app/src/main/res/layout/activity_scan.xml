<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:RippleWaveView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/padding_16"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Scan Music"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_big" />
    </LinearLayout>

    <com.av.ringtone.views.WaterRadarView
        android:id="@+id/wrv"
        android:layout_width="240dip"
        android:layout_height="240dip"
        RippleWaveView:circle_color="#1EAAF1"
        RippleWaveView:default_image="@drawable/music"
        RippleWaveView:image_width="66dip" />

    <TextView
        android:id="@+id/hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:text="Scanning for musicsï¼š"
        android:textColor="#03a9f4"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/file_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:layout_marginTop="2dip"
        android:text=""
        android:singleLine="true"
        android:textColor="#03a9f4" />

    <LinearLayout
        android:id="@+id/home_ad_ll"
        android:layout_width="match_parent"
        android:layout_height="292dp"
        android:orientation="vertical"
        android:visibility="visible"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="@dimen/padding_16"
        android:layout_marginRight="@dimen/padding_16" />

</LinearLayout>
