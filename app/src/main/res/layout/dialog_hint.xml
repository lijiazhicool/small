<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dip">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dip"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="20dip"
        android:text="How to user!"
        android:textColor="@color/text_black"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/text_gray"
            android:src="@drawable/marker_left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Touch and drag the start marker to set the starting point for the ringtone."
            android:textColor="@color/text_gray"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Touch and drag the end marker to set the ending point for the ringtone."
            android:textColor="@color/text_gray"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/text_gray"
            android:src="@drawable/marker_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">
        <CheckBox
            android:id="@+id/confirm_cb"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_checkbox"
            android:button="@null"
            android:textColor="@color/text_gray" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Donâ€™t show again"
            android:textColor="@color/text_gray"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/close_tv"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingBottom="8dp"
        android:paddingRight="5dp"
        android:paddingTop="8dp"
        android:text="OK GOT IT!"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />
</LinearLayout>
