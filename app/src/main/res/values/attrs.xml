<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RadarView">
        <attr name="image_width" format="dimension"></attr>
        <attr name="circle_margin" format="dimension"></attr>
        <attr name="circle_width" format="dimension"></attr>
        <attr name="circle_color" format="color"></attr>
        <attr name="circle_colorx" format="color"></attr>
        <attr name="circle_colorxx" format="color"></attr>
        <attr name="circle_colorxxx" format="color"></attr>
        <attr name="saner_color" format="color"></attr>
        <attr name="default_image" format="reference"></attr>
    </declare-styleable>

    <attr name="textwidth" format="integer"/>
    <attr name="typeface">
        <enum name="normal" value="0"/>
        <enum name="sans" value="1"/>
        <enum name="serif" value="2"/>
        <enum name="monospace" value="3"/>
    </attr>
    <declare-styleable name="CYTextView">
        <attr name="textwidth" />
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="reference|color"/>
        <attr name="lineSpacingExtra" format="dimension"/>
        <attr name="typeface" />
    </declare-styleable>

    <declare-styleable name="RatingBar">
        <!-- The number of stars (or rating items) to show. -->
        <attr name="numStars" format="integer" />
        <!-- The rating to set by default. -->
        <attr name="rating" format="float" />
        <!-- The step size of the rating. -->
        <attr name="stepSize" format="float" />
        <!-- Whether this rating bar is an indicator (and non-changeable by the user). -->
        <attr name="isIndicator" format="boolean" />
        <!-- The spacing between items. -->
        <attr name="spacing" format="dimension" />
        <!-- What kind of mode for automatic adaptation. -->
        <attr name="automatic" format="enum">
            <!-- Fully automatic  -->
            <enum name="fully" value="0"/>
            <!-- Semi automatic  -->
            <enum name="semi" value="1" />
            <!-- Manual -->
            <enum name="manual" value="2" />
        </attr>
        <!-- The default background image. -->
        <attr name="progress" format="reference" />
        <!-- The progressed background image. -->
        <attr name="progressed" format="reference" />
    </declare-styleable>
</resources>